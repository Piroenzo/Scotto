    "/api/board": {
      "post": {
        "summary": "Crear un tablero",
        "parameters": [
          {"name": "title", "in": "body", "required": true, "type": "string"}
        ],
        "responses": {"200": {"description": "Tablero creado"}}
      }
    },
    "/api/list": {
      "post": {
        "summary": "Crear una lista",
        "parameters": [
          {"name": "title", "in": "body", "required": true, "type": "string"}
        ],
        "responses": {"200": {"description": "Lista creada"}}
      }
    }
    // ... puedes agregar más endpoints aquí ...
